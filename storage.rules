rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Default deny.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Business verification documents (immutable uploads).
    match /business_verification/{userId}/{docType}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId)
        && request.resource != null
        && resource == null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf');
    }

    // Business logos (replaceable by owner).
    match /business_logos/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId)
        && request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Invoice logos (replaceable by owner).
    match /invoice_logos/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId)
        && request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Content images (public read).
    match /content/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId)
        && request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Profile pictures (public read, owner write).
    match /profile_pictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId)
        && request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // ID documents (KYC) (immutable uploads).
    match /id_documents/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId)
        && request.resource != null
        && resource == null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf');
    }

    // KYC submissions (tier upgrades) (immutable uploads).
    match /kyc_submissions/{userId}/{submissionId}/{docType}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId)
        && request.resource != null
        && resource == null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf');
    }

    // Donation campaign media (owner can upload/replace/delete; public read).
    match /donation_media/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId)
        && (
          (request.resource != null
            && request.resource.size < 10 * 1024 * 1024
            && request.resource.contentType.matches('image/.*|video/.*'))
          || (request.resource == null) // delete
        );
    }

    // Invoice PDFs: do not allow public reads. If you need public access, generate GCS signed URLs server-side.
    match /invoice_pdfs/{allPaths=**} {
      allow read, write: if false;
    }

    // Legacy invoices path (owner-only).
    match /invoices/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId)
        && request.resource != null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('application/pdf|image/.*');
    }

    // Event banners (public read; owner write/delete).
    match /event_banners/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId)
        && (
          (request.resource != null
            && request.resource.size < 10 * 1024 * 1024
            && request.resource.contentType.matches('image/.*'))
          || (request.resource == null) // delete
        );
    }

    // Disputes evidence (owner read/write/delete).
    match /disputes/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId)
        && (
          (request.resource != null
            && request.resource.size < 5 * 1024 * 1024
            && request.resource.contentType.matches('image/.*|application/pdf'))
          || (request.resource == null) // delete
        );
    }

    // Support ticket attachments (owner upload; support roles read).
    match /support_attachments/{userId}/{fileName} {
      allow read: if isOwner(userId)
        || (isSignedIn()
          && request.auth.token.role != null
          && (request.auth.token.role.matches('support_.*')
            || request.auth.token.role == 'admin'
            || request.auth.token.role == 'super_admin'));

      allow write: if isOwner(userId)
        && request.resource != null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf|application/.*|text/.*|application/vnd.openxmlformats-officedocument.*|application/vnd.ms-excel|application/zip');
    }

    // Chat attachments (authenticated read/write; no delete).
    match /chat_attachments/{sessionId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isSignedIn()
        && request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf|application/.*|text/.*');
    }
  }
}

