{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["../node_modules/@types", "node_modules/@types"]
  },
  "include": [
    "index.ts",
    "firebase.ts",
    "services/**/*",
    "gateway/**/*",
    "common/**/*"
  ],
    "exclude": [
      "node_modules",
      "dist",
      "services/pdf/**/*",
      "services/notification-processor/**/*"
    ],
  "ts-node": {
    "esm": false,
    "preferTsExts": true,
    "transpileOnly": true
  }
}
