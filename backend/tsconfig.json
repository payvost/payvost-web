{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "firebase.ts",
    "services/**/*",
    "gateway/**/*",
    "common/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false,
    "preferTsExts": true,
    "transpileOnly": true
  }
}
