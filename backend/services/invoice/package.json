{
  "name": "@payvost/invoice-service",
  "version": "1.0.0",
  "description": "Invoice management service",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "prisma generate --schema=../../prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=../../prisma/schema.prisma",
    "build": "npm run prisma:generate && tsc --project tsconfig.json",
    "prestart": "npm run prisma:generate || true",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "express": "^4.18.0",
    "firebase-admin": "^13.4.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}

