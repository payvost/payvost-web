{
  "name": "@payvost/fraud-service",
  "version": "1.0.0",
  "description": "Fraud detection and risk analysis service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "postinstall": "prisma generate --schema=../../prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=../../prisma/schema.prisma && npm run prisma:copy",
    "prisma:copy": "node scripts/copy-prisma-client.js",
    "build": "npm run prisma:generate && tsc",
    "prestart": "npm run prisma:generate || true",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fraud",
    "risk-analysis",
    "compliance",
    "security"
  ],
  "author": "Payvost",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1",
    "decimal.js": "^10.4.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

