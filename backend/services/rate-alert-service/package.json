{
  "name": "@payvost/rate-alert-service",
  "version": "1.0.0",
  "description": "Rate alert monitoring service for FX rate notifications",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "postinstall": "prisma generate --schema=../../prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=../../prisma/schema.prisma && npm run prisma:copy",
    "prisma:copy": "node scripts/copy-prisma-client.js",
    "build": "npm run prisma:generate && tsc && node scripts/build-common.js",
    "prestart": "(npm run prisma:generate || true) && tsc && node scripts/build-common.js",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "rate-alert",
    "fx-rates",
    "notifications",
    "monitoring"
  ],
  "author": "Payvost",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1",
    "mailgun.js": "^9.4.1",
    "form-data": "^4.0.0",
    "web-push": "^3.6.6",
    "axios": "^1.6.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/web-push": "^3.6.3",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

