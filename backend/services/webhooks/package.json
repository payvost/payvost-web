{
  "name": "@payvost/webhook-service",
  "version": "1.0.0",
  "description": "Webhook processing service for external providers (Reloadly, etc.)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prisma:generate": "prisma generate --schema=../../prisma/schema.prisma && npm run prisma:copy",
    "prisma:copy": "node scripts/copy-prisma-client.js",
    "build": "npm install && npm run prisma:generate && npm run build:common && tsc",
    "build:common": "node scripts/copy-common.js",
    "prestart": "npm run prisma:generate",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webhook",
    "reloadly",
    "payment",
    "processing"
  ],
  "author": "Payvost",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1",
    "firebase-admin": "^12.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

