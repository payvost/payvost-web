{
  "name": "@payvost/email-service",
  "version": "1.0.0",
  "description": "Batch email sending service for notifications",
  "main": "dist/index.js",
  "scripts": {
    "predev": "node scripts/build-common.js",
    "dev": "tsx watch src/index.ts",
    "build": "node scripts/build-common.js && tsc && node scripts/verify-build.js",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "email",
    "notifications",
    "batch"
  ],
  "author": "Payvost",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "cors": "^2.8.5",
    "mailgun.js": "^9.4.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

