generator client {
  provider = "prisma-client-js"
  // Generate Prisma Client into the service's own node_modules
  // This ensures it's available at runtime
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

