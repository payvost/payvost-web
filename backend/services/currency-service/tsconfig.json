{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "express": [
        "./node_modules/express"
      ],
      "express-serve-static-core": [
        "./node_modules/@types/express-serve-static-core"
      ],
      "@prisma/client": [
        "./node_modules/@prisma/client"
      ],
      ".prisma/client": [
        "./node_modules/.prisma/client"
      ],
      "firebase-admin": [
        "./node_modules/firebase-admin"
      ],
      "jsonwebtoken": [
        "./node_modules/jsonwebtoken"
      ],
      "pino": [
        "./node_modules/pino"
      ],
      "express-rate-limit": [
        "./node_modules/express-rate-limit"
      ],
      "cors": [
        "./node_modules/cors"
      ],
      "*": [
        "./node_modules/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "../../gateway/middleware.ts",
    "../../gateway/index.ts",
    "../../gateway/auth-middleware.ts",
    "../../gateway/rateLimiter.ts",
    "../../gateway/api-versioning.ts",
    "../../common/logger.ts",
    "../../common/error-tracker.ts",
    "../../common/prisma.ts",
    "../../common/performance-monitor.ts",
    "../../common/apm-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}